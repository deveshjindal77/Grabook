doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  link(href='https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Playfair+Display+SC&family=Chakra+Petch' rel='stylesheet')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Grabook.com
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css')
  link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap' rel='stylesheet')
  link(rel='stylesheet' href='/static/css/profile.css')
  link(rel='stylesheet' href='/static/css/home.css')
.navbar
  a.logo(href='') 
    img(src='/static/images/logo.png')
  span.menu
    span.home-title
      a(href='/') Home
    span.buy-title
      a(href='/grab_book') Grab A Book
    span.sell-title
      a(href='/book_upload') Sell
  .login
    if user
      .dropdown
        button.dropbtn
          img.rounded-circle(src=user.profile_pic alt="Couldn't load" width='30px' height='30px')
          i.fa.fa-caret-down(style='padding-left:20px; margin: 0; bottom: 10px;')
        .dropdown-content
          a(href='/profile') Profile
          a(href='/books_in_ad') Books Posted
          a(href='/books_sold') Books Sold
          a(href='/books_bought') Books Bought
          a(href='/wishlist') Wishlist
          a(href='/logout') Logout 
    else     
      .login-button
        a(href='/signin') 
          .text Get Started
.container
  .row
    .col-4
      form.profile_pic_form(action='/profile_upload' method='post' enctype="multipart/form-data")
        img.rounded-circle(src=user.profile_pic alt="Couldn't load" width='250px' height='250px')
        br
        input.btn.profile-btn(type='file' value='Change Profile Photo' name='myfile')
        br
        input.btn(type='submit' value='Upload your Image')
    .col-6
      .profile
        .profile_info
          p.heading2
            i.fa.fa-user
            | User Name
          .box1
            | #{user.user_name}
          p.heading2
            i.fa.fa-user
            | First Name
          .box1
            | #{user.first_name}
          p.heading2
            i.fa.fa-user
            | Last Name
          .box1
            | #{user.last_name}
          p.heading2
            i.fa.fa-envelope
            | Email ID
          .box1
            | #{user.email_id}
          p.heading2
            i.fa.fa-phone
            | Contact Number
          .box1
            | #{user.phone_number}
          p.heading2
            i.fa.fa-user
            | Age
          .box1
            | #{user.age}
          p.heading2
            i.fa.fa-university
            | University Name
          .box1
            | #{user.university_name}
          p.heading2
            i.fa.fa-user
            | Occupation
          .box1
            | #{user.occupation}
          p.heading2
            i.fa.fa-user
            | Bio
          p.box1
            | #{user.bio}
        form(action='/edit_profile' method='get')
          input.btn.btn1(value='Edit Profile' type='submit')
