doctype html
head
  title Grabook.com
  link(rel='icon' href='/static/images/favicon.png' )
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css')
  link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap' rel='stylesheet')
  link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
  link(href='https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Playfair+Display+SC&family=Chakra+Petch' rel='stylesheet')
  link(rel='stylesheet' href='/static/css/home.css')
.menu-bar
  a.logo(href='/') 
    img(src='/static/images/logo.png')
  span.menu
    span.home-title
      a(href='/')
        .text Home
    span.buy-title
      a(href='/grab_book')
        .text Grab A Book
    span.sell-title
      a(href='/book_upload')
        .text Sell 
  .login
    if user
      .dropdown
        button.dropbtn
          img.rounded-circle(src=user.profile_pic alt="Couldn't load" width='30px' height='30px')
          i.fa.fa-caret-down(style='padding-left:20px; margin: 0; bottom: 10px;')
        .dropdown-content
          a(href='/profile') Profile
          a(href='/books_in_ad') Books Posted
          a(href='/books_sold') Books Sold
          a(href='/books_bought') Books Bought
          a(href='/wishlist') Wishlist
          a(href='/logout') Logout 
    else     
      .login-button
        a(href='/signin') 
          .text Get Started 

.mid-section
  img.mid-image(src='/static/images/home.jpg')
  .quote
    | &quot;Books should go where they will be most appreciated,
    | not sit unread gathering dust on a forgotten shelf&quot;
  .postcard
    h1 Grab A Book!
    hr
    p An online portal for exchanging used books from university peeps around you!
    a(href='/signin')
      .button
        .button-text Buy A Book

.bottom-section
  .left-footer
    | Grabook.com is a project created by Students as a project for the CS-258 (Software Engineering)
    br
    |  This project is made exclusively to cater the needs of students who don&apos;t want to spend money on new books or for easy availabilty of some special books.
  .right-footer
    p Group Name: G9
    p Address: IIT Indore
    p Copyright &copy; G9. All rights reserved